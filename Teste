wait(3)--// Serviços
local player = game.Players.LocalPlayer

--// GUI
local gui = Instance.new("ScreenGui")
gui.Name = "HubAbasRoxo"
gui.ResetOnSpawn = false
gui.Parent = player.PlayerGui

--// Frame principal
local main = Instance.new("Frame", gui)
main.Size = UDim2.new(0, 720, 0, 420)
main.Position = UDim2.new(0.5, -360, 0.5, -210)
main.BackgroundColor3 = Color3.fromRGB(90, 40, 160)
main.Active = true
main.Draggable = true
main.BorderSizePixel = 0

Instance.new("UICorner", main).CornerRadius = UDim.new(0,15)
local mainStroke = Instance.new("UIStroke", main)
mainStroke.Color = Color3.new(0,0,0)
mainStroke.Thickness = 2

--// Sidebar (ScrollingFrame)
local sidebar = Instance.new("ScrollingFrame", main)
sidebar.Size = UDim2.new(0, 220, 1, 0)
sidebar.CanvasSize = UDim2.new(0, 0, 0, 0)
sidebar.ScrollBarImageTransparency = 1
sidebar.BackgroundColor3 = Color3.fromRGB(70, 30, 130)
sidebar.BorderSizePixel = 0
sidebar.ClipsDescendants = true

Instance.new("UICorner", sidebar).CornerRadius = UDim.new(0,15)
local sidebarStroke = Instance.new("UIStroke", sidebar)
sidebarStroke.Color = Color3.new(0,0,0)
sidebarStroke.Thickness = 2

--// Conteúdo
local content = Instance.new("Frame", main)
content.Position = UDim2.new(0, 220, 0, 0)
content.Size = UDim2.new(1, -220, 1, 0)
content.BackgroundColor3 = Color3.fromRGB(110, 60, 180)
content.BorderSizePixel = 0

Instance.new("UICorner", content).CornerRadius = UDim.new(0,15)
local contentStroke = Instance.new("UIStroke", content)
contentStroke.Color = Color3.new(0,0,0)
contentStroke.Thickness = 2

--// Layout sidebar
local layout = Instance.new("UIListLayout", sidebar)
layout.Padding = UDim.new(0,6)
layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
layout.SortOrder = Enum.SortOrder.LayoutOrder

layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
	sidebar.CanvasSize = UDim2.new(0, 0, 0, layout.AbsoluteContentSize.Y + 10)
end)

--// Abas
local tabs = {
	"99 Noites",
	"Steal a Brainrot",
	"Blox Fruits",
	"Volleyball Legends",
	"Blue Lock",
	"Forsaken",
	"Grow a Garden",
	"Fish",
	"Campos de Batalha",
	"Build a Boat",
	"MM2",
	"The Forge",
	"Blade Ball",
	"Death Ball",
	"Brookhaven RP",
	"Trilhos Mortos"
}

local pages = {}

--// Criar abas
for _, name in ipairs(tabs) do
	local button = Instance.new("TextButton", sidebar)
	button.Size = UDim2.new(1, -12, 0, 36)
	button.Text = name
	button.BackgroundColor3 = Color3.fromRGB(120, 70, 200)
	button.TextColor3 = Color3.new(1,1,1)
	button.Font = Enum.Font.Gotham
	button.TextSize = 14
	button.BorderSizePixel = 0
	button.AutoButtonColor = false

	Instance.new("UICorner", button).CornerRadius = UDim.new(0,10)
	local stroke = Instance.new("UIStroke", button)
	stroke.Color = Color3.new(0,0,0)
	stroke.Thickness = 1

	-- Página
	local page = Instance.new("Frame", content)
	page.Size = UDim2.new(1,0,1,0)
	page.BackgroundTransparency = 1
	page.Visible = false

	local title = Instance.new("TextLabel", page)
	title.Size = UDim2.new(1,0,0,50)
	title.Text = name .. " - Categoria"
	title.TextColor3 = Color3.new(1,1,1)
	title.Font = Enum.Font.GothamBold
	title.TextSize = 22
	title.BackgroundTransparency = 1

	pages[name] = page

	-- SUB-CATEGORIAS DE 99 NOITES
	if name == "99 Noites" then

		local function createSubButton(text, posY, url)
			local btn = Instance.new("TextButton", page)
			btn.Position = UDim2.new(0, 30, 0, posY)
			btn.Size = UDim2.new(0, 260, 0, 45)
			btn.Text = text
			btn.BackgroundColor3 = Color3.fromRGB(150, 90, 230)
			btn.TextColor3 = Color3.new(1,1,1)
			btn.Font = Enum.Font.GothamBold
			btn.TextSize = 15
			btn.BorderSizePixel = 0

			Instance.new("UICorner", btn).CornerRadius = UDim.new(0,12)
			Instance.new("UIStroke", btn).Color = Color3.new(0,0,0)

			btn.MouseButton1Click:Connect(function()
				loadstring(game:HttpGet(url, true))()
			end)
		end

		createSubButton("Voidware (sem key)", 80,
			"https://raw.githubusercontent.com/VapeVoidware/VW-Add/main/nightsintheforest.lua")

		createSubButton("H4x (com key)", 140,
			"https://raw.githubusercontent.com/H4xScripts/Loader/refs/heads/main/loader.lua")

		createSubButton("Fox name (sem key)", 200,
			"https://rawscripts.net/raw/99-Nights-in-the-Forest-Foxname-Hub-57131")
	end

	-- Clique da aba
	button.MouseButton1Click:Connect(function()
		for _, p in pairs(pages) do
			p.Visible = false
		end
		page.Visible = true
	end)
end

--// Abrir primeira aba
pages[tabs[1]].Visible = true
